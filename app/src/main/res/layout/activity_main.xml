<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnWorkWithImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="@color/black"
        android:text="Работа с фото"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnViewImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/black"
        android:text="Просмотр фото"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnCompressor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/black"
        android:text="Проверка компрессии"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnPdfViewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="@color/black"
        android:text="Просмотр pdf"
        android:textAllCaps="false" />

</LinearLayout>